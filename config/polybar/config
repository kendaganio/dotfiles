[colors]
fg = #ffffff
bg = #e4e4e4
icon = #4ec2f7

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 34
fixed-center = false

background = #00000000
foreground = #ccffffff

border-size = 0
border-color = #00000000

font-0 = "SF Mono:size=10:antialias=true"
font-1 = "Material Icons:pixelsize=12;0"
font-2 = "Symbola:size=12:antialias=true"
font-3 = "Wuncon Siji:size=12:antialias=true"

module-margin = 1
modules-left = i3
modules-center = title
modules-right = date time-denver

[bar/bottom]
width = 100%
height = 30
bottom = true
module-margin = 1
modules-left = filesystem cpu memory eth 
modules-center = backlight-acpi pulseaudio battery temperature 
modules-right = wlan

font-0 = "SF Mono:size=10:antialias=true"
font-1 = "Material Icons:pixelsize=12;0"
font-2 = "Symbola:size=12:antialias=true"
font-3 = "Wuncon Siji:size=12:antialias=true"


tray-position = right
tray-padding = 3
tray-transparent = true
tray-background = #00000000

[module/title]
type = internal/xwindow
label = %title%
label-maxlen = 75

[module/i3]
type = internal/i3
strip-wsnumbers = true
format = <label-state><label-mode>

label-mode = %mode%
label-mode-padding = 2

label-focused = %name%
label-focused-padding = 2
label-focused-background = #6600cec9
label-focused-foreground = #ffffffff

label-unfocused = %name%
label-unfocused-foreground = #ffffffff
label-unfocused-padding = 2

label-visible-padding = 2

label-urgent = %name%
label-urgent-background = #66d63031
label-urgent-padding = 2

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted = %{F#0a81f5}%mountpoint%%{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted


[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
;format = <label>
label =  %percentage%%

bar-width = 10
bar-indicator =
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.fg}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = ""
format-prefix-foreground = ${colors.fg}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.fg}
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
;format-connected = <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.fg}

ramp-signal-0 = 
ramp-signal-foreground = ${colors.fg}

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.fg}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.fg}

[module/date]
type = internal/date
interval = 30

date-alt =
date = " %a %B, %d"

time = %I:%M %p
time-alt = %H:%M %p

format-prefix = 
format-prefix-foreground = ${colors.fg}
format-underline = #0a6cf5

label = %date% %time%


[module/time-denver]
type = custom/script
exec = TZ=America/Denver date +"MT: %I:%M %p"
interval = 30

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume =  %percentage%%
label-volume-foreground = #ffffff

label-muted = 🔇 muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.fg}

[module/alsa]
