[alias]
  s = status -sb 
  br = branch
  l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ %cn" --decorate --graph
  d = diff --word-diff
  dc = diff --cached
  co = checkout
  c = commit
  pl = pull origin master
  ps = push origin master
[core]
  editor = nvim
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[init]
	defaultBranch = main
